<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/binar"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wellcomeback, fill this formulir untuk melanjutkan !"
            android:textColor="#733572"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColorHint="#9E000000"
            android:layout_marginTop="10dp"
            android:id="@+id/username"
            android:textAlignment="center"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="#9E000000"
            android:layout_marginTop="10dp"
            android:id="@+id/passwrd"
            android:textAlignment="center"
            />
        <Button
            android:id="@+id/login"
            android:layout_marginTop="10dp"
            android:backgroundTint="#733572"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"/>
        <Button
            android:id="@+id/register"
            android:layout_marginTop="10dp"
            android:backgroundTint="#9E733572"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"/>

    </LinearLayout>

</FrameLayout>